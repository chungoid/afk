{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task",
  "description": "A discrete task generated by the Analysis Agent",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the task"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Short title summarizing the task"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the task"
    },
    "dependencies": {
      "type": "array",
      "description": "List of task IDs that must be completed before this one",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "uniqueItems": true,
      "default": []
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the task",
      "properties": {
        "requestId": {
          "type": "string",
          "description": "ID of the originating analysis request"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when the task was generated"
        },
        "source": {
          "type": "string",
          "description": "Source of the task generation, e.g. 'analysis-agent'"
        }
      },
      "required": ["requestId", "timestamp"],
      "additionalProperties": false
    }
  },
  "required": ["id", "title", "description", "metadata"],
  "additionalProperties": false
}